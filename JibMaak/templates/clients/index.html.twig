{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idclient</th>
                <th>Nomcl</th>
                <th>Prenomcl</th>
                <th>Telcl</th>
                <th>Adresscl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.idclient }}</td>
                <td>{{ client.nomcl }}</td>
                <td>{{ client.prenomcl }}</td>
                <td>{{ client.telcl }}</td>
                <td>{{ client.adresscl }}</td>
                <td>
                    <a href="{{ path('clients_show', {'idclient': client.idclient}) }}">show</a>
                    <a href="{{ path('clients_edit', {'idclient': client.idclient}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clients_new') }}">Create new</a>
{% endblock %}
