<form method="post" action="{{ path('clients_delete', {'idclient': client.idclient}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.idclient) }}">
    <button class="btn">Delete</button>
</form>
