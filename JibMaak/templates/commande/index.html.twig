{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcmd</th>
                <th>PrixTotalCmd</th>
                <th>DateCmd</th>
                <th>AdresseCmd</th>
                <th>DatePrevu</th>
                <th>EtatCmd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idcmd }}</td>
                <td>{{ commande.prixTotalCmd }}</td>
                <td>{{ commande.dateCmd ? commande.dateCmd|date('Y-m-d') : '' }}</td>
                <td>{{ commande.adresseCmd }}</td>
                <td>{{ commande.datePrevu ? commande.datePrevu|date('Y-m-d') : '' }}</td>
                <td>{{ commande.etatCmd }}</td>
                <td>
                    <a href="{{ path('commande_show', {'idcmd': commande.idcmd}) }}">show</a>
                    <a href="{{ path('commande_edit', {'idcmd': commande.idcmd}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
