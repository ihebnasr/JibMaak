<form method="post" action="{{ path('categories_delete', {'idcate': category.idcate}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.idcate) }}">
    <button class="btn">Delete</button>
</form>
